
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width:960px">
    <div>
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Lista de Categorias</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-square-fill"></i> Crear nuevo
                </a>
            </div>
        </div>
    </div>

    @if(Model.Count() > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th class="text-center">Editar / Eliminar</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th>@item.Name</th>
                        <th>
                            <div class="text-center">
                                <a asp-controller="Category" asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-outline-success">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>        
        </table>
    }
    else
    {
        <p>No tienes ninguna categoría</p>
    }
</div>

