@model IEnumerable<wallapop.Models.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Lista de Categorías</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i> Nueva Categoría
            </a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nombre de las Categorías</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <th>@item.Name</th>
                        <th class="text-center">
                            <div>
                                <a class="btn btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                <a class="btn btn-outline-danger"><i class="bi bi-trash3"></i></a>
                            </div>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No tiene registro de categorías</p>
    }

</div>

